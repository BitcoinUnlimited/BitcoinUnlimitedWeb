
.post__container
    width: 65%

.post__image
    max-width: 80%
    max-height: 400px

.post__image-label
    width: 80%

.container-blog
    width: 100%

.container-blog .h1,
.container-blog .h2,
.container-blog .h3
    font-weight: bold

.container-blog .body-content p,
.container-blog .body-content ul,
.container-blog .body-content ol
    font-size: 18px
    line-height: 1.5em
    width: 54%
    min-width: 340px
    display: block
    margin: 1em auto
    text-align: left

.container-blog .body-content pre
    width: 54%
    min-width: 340px
    display: block
    margin: 1em auto
    text-align: left

.container-blog .body-content img
    margin: 2% 6% 2% 6%
    border-radius: 3px

.container-blog .title,
.container-blog .subtitle
    width: 54%
    min-width: 340px
    display: block
    margin: 1em auto

.container-blog .subtitle
    border-top: 1px solid #efefef
    border-bottom: 1px solid #efefef
    padding: 30px 0
    font-weight: normal
    margin: 30px auto

.container-blog .title
    margin-bottom: 0;

.container-blog .Date
    font-size: 13px

#react-app blockquote
    display: block
    width: 100%
    margin: 40px 0
    text-align: center !important
    background-color: #ff7b00
    color: white
    font-size: 26px
    border: 0
    font-weight: bold
    min-height: 140px
    line-height: 140px

#react-app blockquote .public-DraftStyleDefault-ltr
#react-app blockquote .public-DraftStyleDefault-ltr span
    margin: 0
    text-align: center
