
.content-list,
.log-list
    font-size: 14px

.log-list button,
.content-list button
    margin: 0

#dashboard .blog-list,
#dashboard .content-list
    margin-bottom: 40px
    clear: both
    border-left: 1px solid #333333
    padding-left: 20px

.blog-row,
.content-row
    padding: 20px
    background-color: #f7f7f7
    border-radius: 4px
    margin-bottom: 6px

.blog-row .title,
.content-row .title
    margin: 0
    font-size: 18px
    margin-bottom: 10px

.blog-row .title a,
.content-row .title a
    color: #000000
    text-decoration: none
    border-bottom: 1px solid #000

.blog-row .date,
.content-row .date,
.blog-row .author
    font-size: 13px

.blog-row .subtitle
    margin: 12px 0

a.edit-link
    color: $orange
